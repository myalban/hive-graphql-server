{
  "name": "hive-graphql-server",
  "version": "0.0.1",
  "description": "Hive GraphQL express server",
  "main": "index.js",
  "scripts": {
    "compile": "npm install && babel -d ./build ./src -s",
    "build": "npm run clean && npm run compile",
    "prod": "npm run build && pm2 start ./node_modules/hive-graphql-env/production.json",
    "staging": "npm run build && pm2 start ./node_modules/hive-graphql-env/staging.json",
    "pm2-dev": "npm run build && pm2 start dev-cluster.json",
    "pm2-restart": "npm run build && pm2 restart all",
    "pm2-stop": "pm2 stop all",
    "pm2-delete": "npm run pm2-stop && pm2 delete all",
    "pm2-monit": "pm2 monit",
    "clean": "rm -rf build && mkdir build",
    "dev": "MONGO_URL=\"mongodb://localhost:3001/meteor\" nodemon src/index.js --exec babel-node",
    "test-server": "mocha --compilers js:babel-core/register **/*.serverSpec.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-errors": "^1.5.0",
    "apollo-server-express": "^1.1.0",
    "axios": "^0.16.2",
    "body-parser": "^1.17.2",
    "crypto": "^1.0.1",
    "dataloader": "^1.3.0",
    "express": "^4.15.4",
    "graphql": "^0.10.5",
    "graphql-subscriptions": "^0.4.4",
    "graphql-tools": "^1.1.0",
    "lodash": "^4.17.4",
    "mongodb": "^2.2.31",
    "morgan": "^1.8.2",
    "optics-agent": "^1.1.6",
    "pm2": "^2.6.1",
    "subscriptions-transport-ws": "^0.8.2"
  },
  "optionalDependencies": {
    "hive-graphql-auth": "git+ssh@github.com:hiveteams/hive-graphql-auth.git#4b626259815b7eb9a9bd4a900eb0aecbc18b8411",
    "hive-graphql-env": "git+ssh@github.com:hiveteams/hive-graphql-env.git#954066a6d1516d6946fa9e69a65ac2c406ba9aab"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "mocha": "^3.5.3",
    "nodemon": "^1.11.0",
    "request-promise": "^4.2.2",
    "sinon": "^4.0.0",
    "sinon-chai": "^2.13.0"
  }
}
