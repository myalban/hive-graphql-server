{
  "name": "hive-graphql-server",
  "version": "0.0.1",
  "description": "Hive GraphQL express server",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node ./node_modules/.bin/pm2 start prod-cluster.json",
    "poststart": "node ./node_modules/.bin/pm2 logs",
    "compile": "npm install && babel -d ./build ./src -s",
    "build": "npm run clean && npm run compile",
    "prod": "npm run build && pm2 start ./node_modules/hive-graphql-env/production.json",
    "staging": "npm run build && pm2 start ./node_modules/hive-graphql-env/staging.json",
    "pm2-dev": "npm run build && pm2 start dev-cluster.json",
    "pm2-restart": "npm run build && pm2 restart all",
    "pm2-stop": "pm2 stop all",
    "pm2-delete": "npm run pm2-stop && pm2 delete all",
    "pm2-monit": "pm2 monit",
    "clean": "rm -rf build && mkdir build",
    "debug": "NODE_ENV=dev nodemon src/index.js --exec babel-node --inspect-brk=9229",
    "dev": "NODE_ENV=dev nodemon src/index.js --exec babel-node",
    "test-server": "mocha --compilers js:babel-core/register **/*.serverSpec.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-errors": "^1.5.1",
    "apollo-server-express": "^1.3.2",
    "axios": "^0.16.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.2",
    "crypto": "^1.0.1",
    "dataloader": "^1.3.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "graphql": "^0.12.3",
    "graphql-redis-subscriptions": "^1.4.0",
    "graphql-subscriptions": "^0.5.6",
    "graphql-tools": "^2.14.1",
    "ioredis": "^3.2.2",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "mongodb": "^2.2.31",
    "morgan-body": "^2.4.0",
    "optics-agent": "^1.1.6",
    "pm2": "^2.6.1",
    "request": "^2.83.0",
    "subscriptions-transport-ws": "^0.9.4",
    "winston": "^2.4.0",
    "winston-papertrail": "^1.0.5"
  },
  "optionalDependencies": {
    "hive-graphql-auth": "git+ssh@github.com:hiveteams/hive-graphql-auth.git#7b9a6ff34114d67cc3f4de425b5b320355255b9b",
    "hive-graphql-env": "git+ssh@github.com:hiveteams/hive-graphql-env.git#954066a6d1516d6946fa9e69a65ac2c406ba9aab"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "mocha": "^3.5.3",
    "nodemon": "^1.11.0",
    "request-promise": "^4.2.2",
    "sinon": "^4.0.0",
    "sinon-chai": "^2.13.0"
  }
}
